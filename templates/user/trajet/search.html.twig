{% extends 'user/base.html.twig' %}

{% block title %}Hello TrajetController!
{% endblock %}

{% block body %}
	<div class="row">

		<div class="col">
			<div class="row my-3 d-flex justify-content-center ">
				<div class="col-sm-8 col-md-6">
					<div style="display:{{display}} ;">
						<div class="alert alert-danger d-flex align-items-center " role="alert">
							<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
								<symbol id="exclamation-triangle-fill" fill="currentColor" viewbox="0 0 16 16">
									<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
								</symbol>
							</svg>
							<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
							<div class="ml-3">
								Ce trajet n'existe pas
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="container ">

				{{ form_start(form, {'attr' : {'novalidate': 'novalidate'}}) }}
				<div class="row my-3 d-flex justify-content-center ">
					<div class="col-8 col-md-4 col-lg-3 ">
						<label class="text-dark">Depart :</label>
						<div class="input-group input-group-outline ">
							{{ form_widget(form.depart, {'attr': {'class': 'form-control bg-white'}}) }}

						</div>
						<div class="text-danger">
							{{ form_errors(form.depart) }}

						</div>
					</div>
					<div class="col-8 col-md-4 col-lg-3">
						<label class="text-dark">Destination :</label>
						<div class="input-group input-group-outline">
							{{ form_widget(form.destination, {'attr': {'class': 'form-control bg-white'}}) }}

						</div>
						
						<div class="text-danger">
							{{ form_errors(form.destination) }}

						</div>
					</div>
				</div>

				<div class="row my-3 d-flex justify-content-center">
					<div class="col-8 col-md-2 col-lg-1"></div>
					<div class="col-8 col-md-4 col-lg-4">
						<div class="text-center">

							{{ form_widget(form.search, {'attr': {'class': 'btn text-white bg-success w-100 my-4 mb-2'}, 'label': 'Chercher Trajet'}) }}

						</div>
					</div>
					<div class="col-8 col-md-2 col-lg-1"></div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}
